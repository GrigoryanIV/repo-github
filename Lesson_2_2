#Для списка реализовать обмен значений соседних элементов
c = False

while c == False:
    lst_my = list(input("Введите набор символов: "))
    num = len(lst_my)

    if num >= 2:
       c = True
    else:
        print("Количество символов должно быть больше двух")

lst_new = list()
m = 0
k = 1
n = num//2

while m < n:

    lst_new.append(lst_my[k])
    lst_new.append(lst_my[k-1])
    k = k + 2
    m = m + 1

if num > n*2:
    lst_new.append(lst_my[-1])
print(f"Список после модернизации: - {lst_new} ")