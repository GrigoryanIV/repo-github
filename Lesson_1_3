
n = 0
s_long = input("Введите целое неотрицательное число: ")

lst_s_long = list(s_long)
lst_s_long.sort(reverse = True)
lst_sort = "".join(lst_s_long)

print("Получите результат - {}".format(lst_sort[0]))

a = int(lst_s_long[n])
while n < (len(s_long) - 1):

 if int(lst_s_long[n]) <= int(lst_s_long[n+1]) and a <= int(lst_s_long[n+1]):
  a = int(lst_s_long[n+1])

 n = n + 1

print("А теперь тоже самое, только через попу - {}".format(a))



